<table class="table table-striped table-bordered caption-top">
  <caption>Hosts</caption>
  <thead>
    <tr>
      <th>ID</th>
      <th>Hostname</th>
    </tr>
  </thead>

  <tbody>
    {{ range .Clients }}
    <tr>
      <td>{{ .ID }}</td>
      <td>
        <a href="/chart/{{ .Name }}">
          {{ .Name }}
        </a>
      </td>
    </tr>
    {{ end }}
  </tbody>
</table>
{{ end }}
