{{ define "records" }}
{{/* Created on 05. 06. 2023 */}}
{{/* Time-stamp: <2023-06-13 20:34:49 krylon> */}}
<table class="table table-script table-bordered caption-top">
  <caption>Records</caption>
  <thead>
    <tr>
      <th>Hostname</th>
      <th>Timestamp</th>
      <th>Uptime</th>
      <th>Load</th>
    </tr>
  </thead>

  <script>
   $(document).ready(function() {
     window.setTimeout(refresh_records, settings.messages.interval)
   })
  </script>
  <tbody id="records">
    {{ range .Records }}
    <tr {{ if .Recent -}} class="alive" {{- end -}}>
      <td>
        <a href="/host/{{ .Hostname }}">
          {{ .Hostname }}
        </a>
      </td>
      <td>{{ fmt_time .Timestamp }}</td>
      <td>{{ .Uptime }}</td>
      <td>
        {{ index .Load 0}} /
        {{ index .Load 1 }} /
        {{ index .Load 2 }}
      </td>
    </tr>
    {{ end }}
  </tbody>
</table>
{{ end }}
